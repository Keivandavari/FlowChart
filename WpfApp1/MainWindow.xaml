<Window x:Class="WpfApp1.MainWindow"
        DataContext="{StaticResource fc}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="rootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="inputsT" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap" Text="Inputs (Space Sperated)" VerticalAlignment="Center" GotFocus="In_Focused"/>
        <TextBox x:Name="outputT" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap" Text="Output" VerticalAlignment="Center" Grid.Column="1"/>
        <TextBox x:Name="fT" HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap" Text="Function Name" VerticalAlignment="Center" Grid.Column="2"/>
        <Button Content="Add" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="Add_Clicked"/>
        <local:FlowChartDiagram x:Name="diagram" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Chart="{Binding chart,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
